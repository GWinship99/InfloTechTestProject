@model UserManagement.Web.Models.Users.UserListItemViewModel

<h2>Add User</h2>

<form method="post">
    <fieldset>
        <legend>User Information</legend>
        <p>
            <label for="Id">ID:</label>
            <input type="number" name="id" value="" />
        </p>

        <p>
            <label for="forename">Forename:</label>
            <input type="text" name="forename" value="" />
        </p>

        <p>
            <label for="surname">Surname:</label>
            <input type="text" name="surname" value="" />
        </p>

        <p>
            <label for="email">Email:</label>
            <input type="text" name="email" value="" />
        </p>

        <p>
            <label for="isActive">Is Active:</label>
            <input type="checkbox" name="isActive" value="true" />
        </p>

        <p>
            <label for="dateOfBirth">Date Of Birth:</label>
            <input type="date" name="dateOfBirth" value="" />
        </p>

        <p><button asp-controller="users" asp-action="Add" type="submit" name="buttonSubmit">Add User</button></p>
    </fieldset>
</form>

